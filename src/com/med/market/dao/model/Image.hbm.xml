<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ohs.dal.model.Image" table="image">
        <id name="imgId" type="java.lang.Long">
            <column name="IMG_ID" length="20" />
            <generator class="identity" />
        </id>
        <property name="thumbnail" type="string">
            <column name="THUMBNAIL" length="200" not-null="true" />
        </property>
        <property name="url" type="string">
            <column name="URL" length="200" not-null="true" />
        </property>
        <many-to-one name="productId" class="com.ohs.dal.model.Product" lazy="false" fetch="select">
            <column name="PRODUCT_ID" not-null="true" />
        </many-to-one>
        <property name="createdDate" type="timestamp">
            <column name="CREATED_DATE" length="19" not-null="true" />
        </property>
        <property name="updateDate" type="timestamp">
            <column name="UPDATE_DATE" length="19" />
        </property>
    </class>
</hibernate-mapping>
