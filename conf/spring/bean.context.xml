<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="bookingAction" class="com.ohs.fo.action.BookingAction" scope="prototype">
		<property name="roomService" ref="roomService" />
		<property name="locationService" ref="locationService" />
		<property name="scheduleService" ref="scheduleService" />
		<property name="bookingService" ref="bookingService" />
		<property name="accountService" ref="accountService" />
	</bean>
	
	<bean id="videoAction" class="com.ohs.fo.action.VideoAction" scope="prototype">
		<property name="service" ref="videoService" />
	</bean>
	
	<bean id="homeAction" class="com.ohs.fo.action.HomeAction" scope="prototype">
		<property name="locationService" ref="locationService" />
		<property name="mailService" ref="mailService" />
		<property name="videoService" ref="videoService" />
	</bean>
	
	<bean id="smsGateway" class="com.ohs.fo.action.SMSGateway" scope="prototype">
	</bean>
	<bean id="pictureAction" class="com.ohs.fo.action.PictureAction" scope="prototype">
	</bean>
	
	<bean id="userAction" class="com.ohs.fo.action.UserAction" scope="prototype">
		<property name="accountService" ref="accountService" />
		<property name="roomService" ref="roomService" />
		<property name="scheduleService" ref="scheduleService" />
		<property name="bookingService" ref="bookingService" />
		<property name="locationService" ref="locationService" />
		<property name="exportService" ref="exportService" />
	</bean>
	
	<bean id="userScheduleAction" class="com.ohs.fo.action.UserScheduleAction" scope="prototype">
		<property name="roomService" ref="roomService" />
		<property name="scheduleService" ref="scheduleService" />
		<property name="locationService" ref="locationService" />
	</bean>
	
	<bean id="accountAction" class="com.ohs.bo.action.AccountAction" scope="prototype">
		<property name="accountService" ref="accountService" />
		<property name="roleService" ref="roleService" />
	</bean>
	
	<bean id="adminHomeAction" class="com.ohs.bo.action.HomeAction" scope="prototype">
		<property name="locationService" ref="locationService" />
		<property name="vidService" ref="videoService" />
	</bean>
	
	<bean id="adminLoginAction" class="com.ohs.bo.action.LoginAction" scope="prototype">
		<property name="accountService" ref="accountService" />
	</bean>
	
	<bean id="loginInterceptor" class="com.ohs.bo.action.LoginInterceptor" scope="prototype">
		
	</bean>
	<bean id="searchAction" class="com.ohs.bo.action.SearchAction" scope="prototype">
		<property name="roomService" ref="roomService" />
	</bean>
</beans>